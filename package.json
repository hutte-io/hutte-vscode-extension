{
  "name": "hutte",
  "displayName": "Hutte",
  "description": "This extension enables to interact with Hutte from VSCode",
  "version": "0.0.23",
  "publisher": "Hutte",
  "repository": {
    "url": "https://github.com/hutte-io/hutte-vscode-extension"
  },
  "icon": "./resources/icon/hutte.png",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:sfdx-project.json",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hutte.login",
        "title": "Login",
        "category": "Hutte"
      },
      {
        "command": "hutte.refreshEmptyProject",
        "title": "Refresh Empty Project",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "hutte.takeFromPool",
        "title": "Take from Pool",
        "category": "Hutte"
      },
      {
        "command": "activeOrgsView.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "activeOrgsView.takeFromPool",
        "title": "Take from Pool"
      },
      {
        "command": "activeOrgsView.openOnHutte",
        "title": "Open on Hutte"
      },
      {
        "command": "activeOrgsView.authorize",
        "title": "Authorize & Set as Default",
        "icon": {
          "light": "resources/light/login.svg",
          "dark": "resources/dark/login.svg"
        }
      },
      {
        "command": "terminatedOrgsView.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "terminatedOrgsView.openOnHutte",
        "title": "Open on Hutte"
      },
      {
        "command": "poolOrgsView.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "poolOrgsView.openOnHutte",
        "title": "Open on Hutte"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "Hutte",
          "icon": "media/Hutte_Logo_Flat.svg"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "id": "activeOrgsView",
          "name": "Project Active Orgs",
          "icon": "media/Hutte_Logo_Flat.svg",
          "contextualTitle": "Hutte",
		      "when": "hutte.IsLogged && hutte.gitProjectOpened && hutte.sfdxProjectOpened && hutte.orgsFound"
        },
        {
          "id": "poolOrgsView",
          "name": "Project Pool Orgs",
          "icon": "media/Hutte_Logo_Flat.svg",
          "contextualTitle": "Hutte",
		      "when": "hutte.IsLogged && hutte.gitProjectOpened && hutte.sfdxProjectOpened && hutte.orgsFound"
        },
        {
          "id": "terminatedOrgsView",
          "name": "Project Terminated Orgs",
          "icon": "media/Hutte_Logo_Flat.svg",
          "contextualTitle": "Hutte",
		      "when": "hutte.IsLogged && hutte.gitProjectOpened && hutte.sfdxProjectOpened && hutte.orgsFound"
        },
        {
          "id": "hutteOrgsAuth",
          "name": "Authorization Required",
          "icon": "media/Hutte_Logo_Flat.svg",
          "contextualTitle": "Authorization Required",
          "when": "!hutte.IsLogged && hutte.gitProjectOpened && hutte.sfdxProjectOpened"
        },
        {
          "id": "hutteNoOrgsFound",
          "name": "No Hutte Orgs Found",
          "icon": "media/Hutte_Logo_Flat.svg",
          "contextualTitle": "No Hutte Orgs Found",
          "when": "hutte.IsLogged && hutte.gitProjectOpened && hutte.sfdxProjectOpened && !hutte.orgsFound"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "activeOrgsView",
        "contents": "Loading Active Hutte Orgs..."
      },
      {
        "view": "terminatedOrgsView",
        "contents": "Loading Terminated Hutte Orgs..."
      },
      {
        "view": "poolOrgsView",
        "contents": "Loading Pool Hutte Orgs..."
      },
      {
        "view": "hutteOrgsAuth",
        "contents": "In order to use Hutte extension, you must first login into Hutte using your Hutte account, or create a new Hutte account.\n[Hutte Login](command:hutte.login)\n[Hutte SignUp](command:hutte.signup)"
      },
      {
        "view": "hutteNoOrgsFound",
        "contents": "No Hutte Orgs were found for this repository. There are two possible reasons:\n1. This repository is not connected to a project in your Hutte account.\n2. Your Hutte project does not contain any active orgs."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hutte.refreshEmptyProject",
          "when": "view == hutteNoOrgsFound",
          "group": "navigation"
        },
        {
          "command": "activeOrgsView.refreshEntry",
          "when": "view == activeOrgsView",
          "group": "navigation"
        },
        {
          "command": "terminatedOrgsView.refreshEntry",
          "when": "view == terminatedOrgsView",
          "group": "navigation"
        },
        {
          "command": "poolOrgsView.refreshEntry",
          "when": "view == poolOrgsView",
          "group": "navigation"
        },
        {
          "command": "activeOrgsView.takeFromPool",
          "when": "view == activeOrgsView"
        }
      ],
      "view/item/context": [
        {
          "command": "activeOrgsView.authorize",
          "when": "view == activeOrgsView",
          "group": "inline"
        },
        {
          "command": "activeOrgsView.authorize",
          "when": "view == activeOrgsView"
        },
        {
          "command": "activeOrgsView.openOnHutte",
          "when": "view == activeOrgsView"
        },
        {
          "command": "poolOrgsView.openOnHutte",
          "when": "view == poolOrgsView"
        },
        {
          "command": "terminatedOrgsView.openOnHutte",
          "when": "view == terminatedOrgsView"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile && npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "dependencies": {
    "execa": "5.1.1",
    "js-yaml": "^3",
    "@types/js-yaml": "^3"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.18.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  }
}
