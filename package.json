{
  "name": "hutte",
  "displayName": "Hutte",
  "description": "This extension enables to interact with Hutte from VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:sfdx-project.json",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hutte.login",
        "title": "Login",
        "category": "Hutte"
      },
      {
        "command": "hutte.activateFromPool",
        "title": "Activate an Org From Pool",
        "category": "Hutte"
      },
      {
        "command": "hutte.getOrg",
        "title": "Get Org",
        "category": "Hutte"
      },
      {
        "command": "hutteOrgs.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "hutteOrgs.activateFromPool",
        "title": "Activate an Org From Pool"
      },
      {
        "command": "hutteOrgs.authorize",
        "title": "Authorize",
        "icon": {
          "light": "resources/light/login.svg",
          "dark": "resources/dark/login.svg"
        }
      },
      {
        "command": "hutteOrgs.openOnHutte",
        "title": "Open on Hutte"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "Hutte",
          "icon": "media/Hutte_Logo_Flat.svg"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "id": "hutteOrgs",
          "name": "Project view",
          "icon": "media/Hutte_Logo_Flat.svg",
          "contextualTitle": "Hutte",
		  "when": "hutte.IsLogged"
        },
		{
			"id": "hutteOrgsAuth",
			"name": "Authorization Required",
			"icon": "media/Hutte_Logo_Flat.svg",
			"contextualTitle": "Authorization Required",
			"when": "!hutte.IsLogged",
			"contents": "ASDASD"
		}
      ]
    },
    "viewsWelcome": [
      {
        "view": "hutteOrgs",
        "contents": "Loading Hutte Orgs..."
      },
	  {
		"view": "hutteOrgsAuth",
		"contents": "In order to use Hutte extension, you must first login into Hutte using your Hutte account, or create a new Hutte account.\n[Hutte Login](command:hutte.login)\n[Hutte SignUp](command:hutte.signup)"
	  }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hutteOrgs.refreshEntry",
          "when": "view == hutteOrgs",
          "group": "navigation"
        },
        {
          "command": "hutteOrgs.activateFromPool",
          "when": "view == hutteOrgs"
        }
      ],
      "view/item/context": [
        {
          "command": "hutteOrgs.authorize",
          "when": "view == hutteOrgs",
          "group": "inline"
        },
        {
          "command": "hutteOrgs.openOnHutte",
          "when": "view == hutteOrgs"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile && npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "dependencies": {
    "execa": "5.1.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.18.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  }
}
